{% extends 'base.html.twig' %}

{% block title %}Bétail - {{ ferme.nom }} - {{ parent() }}{% endblock %}

{% block page_title %}🏢 {{ ferme.nom }}{% endblock %}
{% block page_subtitle %}Vue d'ensemble du bétail de la ferme organisé par bâtiments et zones{% endblock %}

{% block header_actions %}
    <div class="flex space-x-3">
        <a href="{{ path('betail_index') }}" class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Retour à la liste
        </a>
        <button class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Nouveau Bétail
        </button>
    </div>
{% endblock %}

{% block body %}
    <!-- Statistiques de la ferme -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">🐄</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Total Bétail</p>
                    <p class="text-2xl font-semibold text-gray-900">{{ betails|length }}</p>
                </div>
            </div>
        </div>

        {% for type, count in statistiques %}
            <div class="stat-card">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                            {% if type == 'bovin' %}🐄
                            {% elseif type == 'ovin' %}🐑
                            {% elseif type == 'caprin' %}🐐
                            {% elseif type == 'porcin' %}🐷
                            {% elseif type == 'equin' %}🐎
                            {% else %}🐾
                            {% endif %}
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">{{ type|title }}s</p>
                        <p class="text-2xl font-semibold text-gray-900">{{ count }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Organisation par bâtiments -->
    <div class="space-y-6">
        {% for batiment in batiments %}
            <div class="card">
                <div class="card-header">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-3">
                                {% if batiment.type == 'etable' %}🏠
                                {% elseif batiment.type == 'ecurie' %}🏇
                                {% elseif batiment.type == 'bergerie' %}🐑
                                {% elseif batiment.type == 'chevrerie' %}🐐
                                {% elseif batiment.type == 'porcherie' %}🐷
                                {% elseif batiment.type == 'poulailler' %}🐔
                                {% else %}🏢
                                {% endif %}
                            </div>
                            <div>
                                <h3 class="card-title">{{ batiment.nom }}</h3>
                                <p class="text-sm text-gray-500">
                                    {{ batiment.numeroIdentification }} • {{ batiment.type|title }} • 
                                    {% if batiment.zoneFerme %}{{ batiment.zoneFerme.nom }}{% endif %}
                                </p>
                            </div>
                        </div>
                        <div class="text-right">
                            <p class="text-sm font-medium text-gray-900">
                                {{ batiment.occupationActuelle }}/{{ batiment.capaciteMaximale ?? '∞' }}
                            </p>
                            <p class="text-xs text-gray-500">
                                {% if batiment.capaciteMaximale %}
                                    {{ (batiment.tauxOccupation)|number_format(1) }}% occupé
                                {% else %}
                                    Capacité libre
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="p-6">
                    {% if batiment.zones|length > 0 %}
                        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4">
                            {% for zone in batiment.zones %}
                                <a href="{{ path('betail_zone', {id: zone.id}) }}" 
                                   class="block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                    <div class="flex items-center justify-between mb-2">
                                        <h4 class="font-medium text-gray-900">{{ zone.nom }}</h4>
                                        <span class="text-xs px-2 py-1 rounded-full 
                                            {% if zone.statut == 'disponible' %}bg-green-100 text-green-800
                                            {% elseif zone.statut == 'occupe' %}bg-blue-100 text-blue-800
                                            {% elseif zone.statut == 'maintenance' %}bg-yellow-100 text-yellow-800
                                            {% else %}bg-gray-100 text-gray-800
                                            {% endif %}">
                                            {{ zone.statut|title }}
                                        </span>
                                    </div>
                                    <p class="text-sm text-gray-500 mb-2">{{ zone.numeroIdentification }}</p>
                                    <div class="flex items-center justify-between text-sm">
                                        <span class="text-gray-600">
                                            {% set zoneBetails = betails|filter(b => b.zone and b.zone.id == zone.id) %}
                                            {{ zoneBetails|length }} bétail(s)
                                        </span>
                                        {% if zone.capaciteMaximale %}
                                            <span class="text-gray-500">
                                                {{ zone.effectifActuel }}/{{ zone.capaciteMaximale }}
                                            </span>
                                        {% endif %}
                                    </div>
                                    {% if zone.type %}
                                        <p class="text-xs text-gray-400 mt-1">{{ zone.type|replace('_', ' ')|title }}</p>
                                    {% endif %}
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center text-gray-500 py-8">
                            <svg class="w-12 h-12 mx-auto mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h2M9 7h6m-6 4h6m-6 4h6"></path>
                            </svg>
                            <p class="text-sm">Aucune zone configurée pour ce bâtiment</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="p-12 text-center">
                    <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h2M9 7h6m-6 4h6m-6 4h6"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun bâtiment configuré</h3>
                    <p class="text-gray-500 mb-4">Cette ferme n'a pas encore de bâtiments configurés.</p>
                    <button class="btn btn-primary">Ajouter un bâtiment</button>
                </div>
            </div>
        {% endfor %}

        <!-- Bétail sans zone assignée -->
        {% set betailsSansZone = betails|filter(b => b.zone is null) %}
        {% if betailsSansZone|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">⚠️ Bétail sans zone assignée</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for betail in betailsSansZone %}
                            <div class="p-4 border border-yellow-200 bg-yellow-50 rounded-lg">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center mr-3">
                                        {% if betail.type == 'bovin' %}🐄
                                        {% elseif betail.type == 'ovin' %}🐑
                                        {% elseif betail.type == 'caprin' %}🐐
                                        {% elseif betail.type == 'porcin' %}🐷
                                        {% elseif betail.type == 'equin' %}🐎
                                        {% else %}🐾
                                        {% endif %}
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">{{ betail.numeroIdentification }}</p>
                                        <p class="text-sm text-gray-500">{{ betail.sousType|replace('_', ' ')|title }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}