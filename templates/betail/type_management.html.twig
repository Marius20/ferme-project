                            <option value="">Tous</option>
                            <option value="actif" selected>Actifs</option>
                            <option value="vendu">Vendus</option>
                            <option value="mort">Morts</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vue tableau des animaux -->
