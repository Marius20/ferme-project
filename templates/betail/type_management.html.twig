                                        {% else %}
                                            <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center text-lg">
                                                {% if type == 'bovin' %}üêÑ
                                                {% elseif type == 'ovin' %}üêë
                                                {% elseif type == 'caprin' %}üêê
                                                {% elseif type == 'porcin' %}üê∑
                                                {% elseif type == 'equin' %}üêé
                                                {% else %}üêæ{% endif %}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900 flex items-center">
                                            {{ betail.numeroIdentification }}
                                            {% if betail.isNeDansLaFerme() %}
                                                <span class="ml-2 inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-800" title="N√© dans la ferme">üè†</span>
                                            {% endif %}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ betail.race ?: 'Race non sp√©cifi√©e' }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">
                                    {% if betail.age %}
                                        {{ betail.age }} 
