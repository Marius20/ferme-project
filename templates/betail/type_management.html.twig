                                    <div class="text-sm text-gray-900">{{ betail.zone.batiment.nom }}</div>
                                    <div class="text-xs text-gray-500">Zone {{ betail.zone.nom }}</div>
                                {% else %}
                                    <span class="text-gray-400">Non assign√©</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                {% if betail.poidsEntree %}
                                    <div class="text-gray-900">{{ betail.poidsEntree|number_format(1, ',', ' ') }} kg</div>
                                    {% if betail.gainPoids %}
                                        <div class="text-xs {{ betail.gainPoids > 0 ? 'text-green-600' : 'text-red-600' }}">
                                            {{ betail.gainPoids > 0 ? '+' : '' }}{{ betail.gainPoids|number_format(1) }} kg
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <span class="text-gray-400">Non pes√©</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                {% if betail.mere or betail.pere %}
                                    <div class="space-y-1">
                                        {% if betail.mere %}
                                            <div class="text-xs text-gray-600">
                                                <span class="font-medium">M√®re:</span> {{ betail.mere.numeroIdentification }}
                                            </div>
                                        {% endif %}
                                        {% if betail.pere %}
                                            <div class="text-xs text-gray-600">
                                                <span class="font-medium">P√®re:</span> {{ betail.pere.numeroIdentification }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <span class="text-gray-400 text-xs">Parents inconnus</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    {% set dernierSoin = betail.soinsVeterinaires.last %}
                                    {% if dernierSoin %}
                                        {% set joursDepuisSoin = date().diff(dernierSoin.dateSoin).days %}
                                        <div class="w-2 h-2 rounded-full {{ joursDepuisSoin < 30 ? 'bg-green-400' : (joursDepuisSoin < 90 ? 'bg-yellow-400' : 'bg-red-400') }} mr-2"></div>
                                        <span class="text-xs text-gray-600">{{ joursDepuisSoin }}j</span>
                                    {% else %}
                                        <div class="w-2 h-2 rounded-full bg-gray-400 mr-2"></div>
                                        <span class="text-xs text-gray-400">Aucun</span>
                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end space-x-2">
                                    <button onclick="showDetails({{ betail.id }})" class="text-indigo-600 hover:text-indigo-900" title="Voir d√©tails">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                    <button onclick="editAnimal({{ betail.id }})" class="text-gray-600 hover:text-gray-900" title="Modifier">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </button>
                                    <div class="relative" x-data="{ open: false }">
                                        <button @click="open = !open" @click.away="open = false" class="text-gray-400 hover:text-gray-600">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
