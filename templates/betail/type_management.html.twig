                    <p class="text-3xl font-bold text-green-600">{{ nesLaFerme }}</p>
                    <p class="text-xs text-gray-500">{{ totalType > 0 ? ((nesLaFerme/totalType*100)|round(1)) : 0 }}%</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                        <svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                        </svg>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Poids moyen</p>
                    {% set poidsTotal = 0 %}
                    {% set comptePoids = 0 %}
                    {% for betail in betails %}
                        {% if betail.poidsEntree %}
                            {% set poidsTotal = poidsTotal + betail.poidsEntree %}
                            {% set comptePoids = comptePoids + 1 %}
                        {% endif %}
                    {% endfor %}
                    <p class="text-3xl font-bold text-orange-600">{{ comptePoids > 0 ? (poidsTotal / comptePoids)|round(0) : 0 }}</p>
                    <p class="text-xs text-gray-500">kg</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres et Actions -->
    <div class="card mb-6">
        <div class="p-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">Gestion des {{ sousTypeName }}s</h3>
                    <p class="text-sm text-gray-500">Cycle de vie complet : entr√©es, reproduction, sant√©, alimentation, sorties</p>
                </div>
                <div class="flex items-center space-x-3">
                    <div class="flex items-center space-x-2">
