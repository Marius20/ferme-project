    <script>
        // Gestion des cases √† cocher et actions group√©es
        function toggleSelectAll() {
            const selectAll = event.target;
            const checkboxes = document.querySelectorAll('.animal-checkbox');
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
            updateBulkActions();
        }
        
        function updateBulkActions() {
            const selected = document.querySelectorAll('.animal-checkbox:checked');
            const bulkActions = document.getElementById('bulk-actions');
            const selectedCount = document.getElementById('selected-count');
            
            if (selected.length > 0) {
                bulkActions.classList.remove('hidden');
                selectedCount.textContent = selected.length;
            } else {
                bulkActions.classList.add('hidden');
            }
        }
        
        function clearSelection() {
            document.querySelectorAll('.animal-checkbox').forEach(cb => cb.checked = false);
            document.querySelector('thead input[type="checkbox"]').checked = false;
            updateBulkActions();
        }
        
        // Filtrage
        function filterAnimals() {
            const status = document.getElementById('filter-status').value;
            const rows = document.querySelectorAll('.animal-row');
            
            rows.forEach(row => {
                if (!status || row.dataset.status === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
        
        // Actions individuelles
        function showDetails(id) {
            window.location.href = "{{ path('betail_show', {id: 'PLACEHOLDER'}) }}".replace('PLACEHOLDER', id);
        }
        
        function editAnimal(id) {
            alert('Modifier animal ID: ' + id);
        }
        
        function addMedicalRecord(id) {
            alert('Ajouter fiche m√©dicale pour animal ID: ' + id);
        }
        
        function addFeeding(id) {
            alert('Ajouter alimentation pour animal ID: ' + id);
        }
        
        function addReproduction(id) {
            alert('Ajouter reproduction pour animal ID: ' + id);
        }
        
        function sellAnimal(id) {
            if (confirm('√ätes-vous s√ªr de vouloir vendre cet animal ?')) {
                alert('Vendre animal ID: ' + id);
            }
        }
        
        function addNewAnimal(type, sousType) {
            // Show modal or redirect to add new animal form with farm context
            alert('Ajouter nouveau animal - Type: ' + type + ', Sous-type: ' + sousType + ', Ferme: {{ fermeActive.id }}');
        }
        
        function importAnimals() {
            alert('Import d\'animaux √† impl√©menter');
        }
        
        // Actions group√©es
        function bulkMove() {
            const selected = Array.from(document.querySelectorAll('.animal-checkbox:checked')).map(cb => cb.value);
            alert('D√©placer les animaux: ' + selected.join(', '));
        }
        
        function bulkExport() {
            const selected = Array.from(document.querySelectorAll('.animal-checkbox:checked')).map(cb => cb.value);
            alert('Exporter les animaux: ' + selected.join(', '));
        }
        
        function bulkDelete() {
            const selected = Array.from(document.querySelectorAll('.animal-checkbox:checked')).map(cb => cb.value);
            if (confirm('√ätes-vous s√ªr de vouloir supprimer ' + selected.length + ' animaux ?')) {
                alert('Supprimer les animaux: ' + selected.join(', '));
            }
        }
        
        // √âcouter les changements de cases √† cocher
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.animal-checkbox').forEach(cb => {
                cb.addEventListener('change', updateBulkActions);
            });
        });
    </script>
{% endblock %}