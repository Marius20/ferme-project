{% extends 'base.html.twig' %}

{% block title %}Changer de Ferme - {{ parent() }}{% endblock %}

{% block page_title %}Changer de Ferme{% endblock %}
{% block page_subtitle %}Sélectionnez une autre ferme pour continuer votre travail{% endblock %}

{% block header_actions %}
    <div class="flex space-x-3">
        <a href="javascript:history.back()" class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Retour
        </a>
        <a href="{{ path('ferme_clear_selection') }}" class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Annuler sélection
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <!-- Ferme actuellement active -->
        {% if ferme_active %}
            <div class="mb-8">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Ferme actuellement active</h3>
                <div class="card bg-blue-50 border-blue-200">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                                    {% if ferme_active.type == 'elevage_bovin' %}🐄
                                    {% elseif ferme_active.type == 'elevage_ovin' %}🐑
                                    {% elseif ferme_active.type == 'elevage_caprin' %}🐐
                                    {% elseif ferme_active.type == 'elevage_porcin' %}🐷
                                    {% elseif ferme_active.type == 'elevage_mixte' %}🏢
                                    {% elseif ferme_active.type == 'culture' %}🌾
                                    {% else %}🚜
                                    {% endif %}
                                </div>
                                <div>
                                    <h4 class="text-xl font-semibold text-gray-900">{{ ferme_active.nom }}</h4>
                                    <p class="text-sm text-gray-600">{{ ferme_active.localisation }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800 mr-3">
                                    ✓ Active
                                </span>
                                <a href="{{ path('dashboard_ferme', {id: ferme_active.id}) }}" class="btn btn-primary btn-sm">
                                    Tableau de bord
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <!-- Liste des fermes disponibles -->
        <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                {% if ferme_active %}
                    Autres fermes disponibles
                {% else %}
                    Fermes disponibles
                {% endif %}
            </h3>

            {% set autres_fermes = fermes|filter(f => not ferme_active or f.id != ferme_active.id) %}
            
            {% if autres_fermes|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {% for ferme in autres_fermes %}
                        <div class="card hover:shadow-md transition-shadow">
                            <div class="p-6">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center flex-1">
                                        <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center mr-3">
                                            {% if ferme.type == 'elevage_bovin' %}🐄
                                            {% elseif ferme.type == 'elevage_ovin' %}🐑
                                            {% elseif ferme.type == 'elevage_caprin' %}🐐
                                            {% elseif ferme.type == 'elevage_porcin' %}🐷
                                            {% elseif ferme.type == 'elevage_mixte' %}🏢
                                            {% elseif ferme.type == 'culture' %}🌾
                                            {% else %}🚜
                                            {% endif %}
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="font-semibold text-gray-900">{{ ferme.nom }}</h4>
                                            <p class="text-sm text-gray-500">{{ ferme.localisation }}</p>
                                            <p class="text-xs text-gray-400 mt-1">{{ ferme.type|replace('_', ' ')|title }}</p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <a href="{{ path('ferme_select', {id: ferme.id}) }}" 
                                           class="btn btn-primary btn-sm">
                                            Sélectionner
                                        </a>
                                        <div class="mt-2 text-xs text-gray-500">
                                            <div>{{ ferme.betails|length }} bétail</div>
                                            <div>{{ ferme.batiments|length }} bâtiments</div>
                                        </div>
                                    </div>
                                </div>

                                {% if ferme.description %}
                                    <p class="text-sm text-gray-600 mt-3 line-clamp-2">
                                        {{ ferme.description }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12 bg-gray-50 rounded-lg">
                    <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h2M9 7h6m-6 4h6m-6 4h6"></path>
                    </svg>
                    <p class="text-gray-500">
                        {% if ferme_active %}
                            Aucune autre ferme disponible.
                        {% else %}
                            Aucune ferme disponible.
                        {% endif %}
                    </p>
                </div>
            {% endif %}
        </div>

        <!-- Actions supplémentaires -->
        <div class="mt-8 pt-6 border-t border-gray-200">
            <div class="flex items-center justify-center space-x-4">
                <button class="btn btn-outline">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Ajouter une nouvelle ferme
                </button>
                
                {% if fermes|length > 1 %}
                    <a href="{{ path('dashboard_general') }}" class="btn btn-outline">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        Vue d'ensemble de toutes les fermes
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Styles CSS additionnels -->
    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
{% endblock %}