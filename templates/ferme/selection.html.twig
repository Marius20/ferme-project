                                        </div>
                                    </div>

                                    {% if ferme.description %}
                                        <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                                            {{ ferme.description }}
                                        </p>
                                    {% endif %}

                                    <!-- Statistiques rapides -->
                                    <div class="pt-4 border-t border-gray-100">
                                        <div class="grid grid-cols-3 gap-4 text-center">
                                            <div class="bg-gray-50 rounded-lg p-2">
                                                <div class="text-xl font-bold text-gray-900">{{ ferme.betails|length }}</div>
                                                <div class="text-xs text-gray-500">B√©tail</div>
                                            </div>
                                            <div class="bg-gray-50 rounded-lg p-2">
                                                <div class="text-xl font-bold text-gray-900">{{ ferme.batiments|length }}</div>
                                                <div class="text-xs text-gray-500">B√¢timents</div>
                                            </div>
