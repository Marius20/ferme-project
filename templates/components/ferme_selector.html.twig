<!-- Sélecteur de ferme dans la navigation -->
<div class="relative" x-data="{ open: false }">
    <button @click="open = !open" 
            @click.away="open = false"
            class="flex items-center text-sm font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 px-3 py-2 rounded-md">
        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
            {% if ferme_active %}
                {% if ferme_active.type == 'elevage_bovin' %}🐄
                {% elseif ferme_active.type == 'elevage_ovin' %}🐑
                {% elseif ferme_active.type == 'elevage_caprin' %}🐐
                {% elseif ferme_active.type == 'elevage_porcin' %}🐷
                {% elseif ferme_active.type == 'elevage_mixte' %}🏢
                {% elseif ferme_active.type == 'culture' %}🌾
                {% else %}🚜
                {% endif %}
            {% else %}
                🏢
            {% endif %}
        </div>
        <div class="text-left">
            <div class="font-medium">
                {% if ferme_active %}
                    {{ ferme_active.nom|slice(0, 15) }}{% if ferme_active.nom|length > 15 %}...{% endif %}
                {% else %}
                    Fermes
                {% endif %}
            </div>
        </div>
        <svg class="ml-2 h-4 w-4 transition-transform duration-200" 
             :class="{ 'rotate-180': open }" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
    </button>

    <!-- Menu déroulant -->
    <div x-show="open" 
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-75"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-95"
         class="absolute right-0 mt-2 w-80 bg-white rounded-md shadow-lg border border-gray-200 z-50">
        
        <!-- En-tête -->
        <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-md">
            <p class="text-sm font-medium text-gray-900">Changer de ferme</p>
        </div>

        <!-- Liste des fermes -->
        <div class="max-h-80 overflow-y-auto">
            {% if fermes_disponibles|length > 0 %}
                {% for ferme in fermes_disponibles %}
                    <a href="{{ path('ferme_select', {id: ferme.id}) }}" 
                       class="flex items-center px-4 py-3 hover:bg-gray-50 transition-colors
                              {% if ferme_active and ferme.id == ferme_active.id %}bg-blue-50 border-r-2 border-blue-500{% endif %}">
                        <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mr-3">
                            {% if ferme.type == 'elevage_bovin' %}🐄
                            {% elseif ferme.type == 'elevage_ovin' %}🐑
                            {% elseif ferme.type == 'elevage_caprin' %}🐐
                            {% elseif ferme.type == 'elevage_porcin' %}🐷
                            {% elseif ferme.type == 'elevage_mixte' %}🏢
                            {% elseif ferme.type == 'culture' %}🌾
                            {% else %}🚜
                            {% endif %}
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between">
                                <p class="text-sm font-medium text-gray-900 truncate">{{ ferme.nom }}</p>
                                {% if ferme_active and ferme.id == ferme_active.id %}
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 ml-2">
                                        Active
                                    </span>
                                {% endif %}
                            </div>
                            <p class="text-xs text-gray-500 truncate">{{ ferme.localisation }}</p>
                            <div class="flex items-center mt-1 text-xs text-gray-400">
                                <span>{{ ferme.betails|length }} bétail</span>
                                <span class="mx-1">•</span>
                                <span>{{ ferme.batiments|length }} bâtiments</span>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            {% else %}
                <div class="px-4 py-6 text-center">
                    <svg class="w-8 h-8 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h2M9 7h6m-6 4h6m-6 4h6"></path>
                    </svg>
                    <p class="text-sm text-gray-500">Aucune ferme disponible</p>
                </div>
            {% endif %}
        </div>

        <!-- Actions -->
        <div class="border-t border-gray-200 bg-gray-50 rounded-b-md">
            <div class="px-4 py-3 space-y-2">
                <a href="{{ path('app_home') }}" 
                   class="flex items-center w-full px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                    </svg>
                    Toutes les fermes
                </a>
                {% if ferme_active %}
                <a href="{{ path('ferme_clear_selection') }}" 
                   class="flex items-center w-full px-3 py-2 text-sm text-red-700 hover:bg-red-50 rounded-md transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Annuler sélection
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>