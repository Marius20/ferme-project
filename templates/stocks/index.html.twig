{% extends 'base.html.twig' %}

{% block title %}Gestion des Stocks - {{ parent() }}{% endblock %}

{% block page_title %}Gestion des Stocks{% endblock %}
{% block page_subtitle %}Suivi des approvisionnements et des niveaux de stock{% endblock %}

{% block header_actions %}
    <div class="flex space-x-3">
        <button class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Nouveau Stock
        </button>
        <button class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
            Entr√©e de Stock
        </button>
        <button class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Rapport Inventaire
        </button>
    </div>
{% endblock %}

{% block body %}
    <!-- Alertes de stock critique -->
    {% if alertes|length > 0 %}
        <div class="mb-6">
            <div class="alert alert-warning">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-yellow-800">
                            {{ alertes|length }} stock(s) critique(s) d√©tect√©(s)
                        </h3>
                        <div class="mt-2 text-sm text-yellow-700">
                            <ul class="list-disc list-inside space-y-1">
                                {% for stock in alertes %}
                                    <li>{{ stock.nom }} - {{ stock.quantite }} {{ stock.unite }} (seuil: {{ stock.seuilAlerte }})</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Statistiques rapides -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        {% set totalStocks = stocks|length %}
        {% set stocksOK = stocks|filter(s => s.quantite > s.seuilAlerte)|length %}
        {% set stocksCritiques = alertes|length %}
        {% set valeurTotale = 0 %}
        {% for stock in stocks %}
            {% set valeurTotale = valeurTotale + (stock.quantite * stock.prixUnitaire) %}
        {% endfor %}

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üì¶</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Total Articles</p>
                    <p class="text-2xl font-semibold text-gray-900">{{ totalStocks }}</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">‚úÖ</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Stocks OK</p>
                    <p class="text-2xl font-semibold text-green-600">{{ stocksOK }}</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">‚ö†Ô∏è</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Critiques</p>
                    <p class="text-2xl font-semibold text-red-600">{{ stocksCritiques }}</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üí∞</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Valeur Totale</p>
                    <p class="text-2xl font-semibold text-purple-600">{{ valeurTotale|number_format(0, ',', ' ') }}‚Ç¨</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card mb-6">
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label for="ferme-filter" class="form-label">Ferme</label>
                    <select id="ferme-filter" class="form-select">
                        <option value="">Toutes les fermes</option>
                        {% for ferme in fermes %}
                            <option value="{{ ferme.id }}">{{ ferme.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="type-filter" class="form-label">Type</label>
                    <select id="type-filter" class="form-select">
                        <option value="">Tous les types</option>
                        <option value="alimentation">Alimentation</option>
                        <option value="medicament">M√©dicament</option>
                        <option value="equipement">√âquipement</option>
                        <option value="autre">Autre</option>
                    </select>
                </div>
                <div>
                    <label for="statut-filter" class="form-label">Statut Stock</label>
                    <select id="statut-filter" class="form-select">
                        <option value="">Tous</option>
                        <option value="ok">Stock OK</option>
                        <option value="critique">Stock Critique</option>
                    </select>
                </div>
                <div>
                    <label for="search" class="form-label">Recherche</label>
                    <input type="text" id="search" class="form-input" placeholder="Nom article, fournisseur...">
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des stocks -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Inventaire des Stocks</h3>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Article</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ferme</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantit√©</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prix Unit.</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Valeur</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expiration</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for stock in stocks %}
                        {% set estCritique = stock.quantite <= stock.seuilAlerte %}
                        {% set expireSoon = stock.datePeremption and date(stock.datePeremption).diff(date()).days < 30 %}
                        
                        <tr class="hover:bg-gray-50 {{ estCritique ? 'bg-red-50' : '' }}">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                            {% if stock.type == 'alimentation' %}üåæ
                                            {% elseif stock.type == 'medicament' %}üíä
                                            {% elseif stock.type == 'equipement' %}üîß
                                            {% else %}üì¶
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ stock.nom }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ stock.fournisseur }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                    {% if stock.type == 'alimentation' %}bg-green-100 text-green-800
                                    {% elseif stock.type == 'medicament' %}bg-blue-100 text-blue-800
                                    {% elseif stock.type == 'equipement' %}bg-purple-100 text-purple-800
                                    {% else %}bg-gray-100 text-gray-800
                                    {% endif %}">
                                    {{ stock.type|replace('_', ' ')|title }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ stock.ferme.nom }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">
                                    {{ stock.quantite|number_format(0, ',', ' ') }} {{ stock.unite }}
                                </div>
                                <div class="text-xs text-gray-500">
                                    Seuil: {{ stock.seuilAlerte }} {{ stock.unite }}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ stock.prixUnitaire|number_format(2, ',', ' ') }}‚Ç¨
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {{ (stock.quantite * stock.prixUnitaire)|number_format(0, ',', ' ') }}‚Ç¨
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {% if stock.datePeremption %}
                                    <span class="{{ expireSoon ? 'text-red-600 font-medium' : '' }}">
                                        {{ stock.datePeremption|date('d/m/Y') }}
                                    </span>
                                {% else %}
                                    <span class="text-gray-400">-</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if estCritique %}
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                        Critique
                                    </span>
                                {% elseif expireSoon %}
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                        Expire bient√¥t
                                    </span>
                                {% else %}
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                        OK
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end space-x-2">
                                    <button class="text-indigo-600 hover:text-indigo-900" title="Entr√©e/Sortie">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                        </svg>
                                    </button>
                                    <button class="text-green-600 hover:text-green-900" title="Modifier">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </button>
                                    <button class="text-red-600 hover:text-red-900" title="Supprimer">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center text-gray-500">
                                <div class="text-center">
                                    <span class="text-6xl mb-4 block">üì¶</span>
                                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun stock enregistr√©</h3>
                                    <p class="text-gray-500">Commencez par ajouter votre premier article en stock.</p>
                                    <button class="btn btn-primary mt-4">Ajouter un stock</button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}