{% extends 'base.html.twig' %}

{% block title %}Gestion des Volailles - {{ parent() }}{% endblock %}

{% block page_title %}Gestion des Volailles{% endblock %}
{% block page_subtitle %}Suivi des √©levages de volailles et production d'≈ìufs{% endblock %}

{% block header_actions %}
    <div class="flex space-x-3">
        <button class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Nouveau Lot
        </button>
        <button class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Saisie Production
        </button>
        <button class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Rapport Production
        </button>
    </div>
{% endblock %}

{% block body %}
    <!-- Statistiques de production -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        {% set totalVolailles = 0 %}
        {% set totalPondeuses = 0 %}
        {% set totalChair = 0 %}
        {% set productionJour = 0 %}
        
        {% for volaille in volailles %}
            {% set totalVolailles = totalVolailles + volaille.nombreTete %}
            {% if volaille.type == 'poule_pondeuse' %}
                {% set totalPondeuses = totalPondeuses + volaille.nombreTete %}
            {% elseif volaille.type == 'poulet_chair' %}
                {% set totalChair = totalChair + volaille.nombreTete %}
            {% endif %}
        {% endfor %}

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üêì</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Total Volailles</p>
                    <p class="text-2xl font-semibold text-gray-900">{{ totalVolailles|number_format(0, ',', ' ') }}</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">ü•ö</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Pondeuses</p>
                    <p class="text-2xl font-semibold text-orange-600">{{ totalPondeuses|number_format(0, ',', ' ') }}</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üçó</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Poulets Chair</p>
                    <p class="text-2xl font-semibold text-red-600">{{ totalChair|number_format(0, ',', ' ') }}</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üìà</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">≈íufs Aujourd'hui</p>
                    <p class="text-2xl font-semibold text-green-600">{{ productionStats.aujourd_hui ?? 0 }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card mb-6">
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label for="ferme-filter" class="form-label">Ferme</label>
                    <select id="ferme-filter" class="form-select">
                        <option value="">Toutes les fermes</option>
                        {% for ferme in fermes %}
                            <option value="{{ ferme.id }}">{{ ferme.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="type-filter" class="form-label">Type</label>
                    <select id="type-filter" class="form-select">
                        <option value="">Tous les types</option>
                        <option value="poule_pondeuse">Poules pondeuses</option>
                        <option value="poulet_chair">Poulets de chair</option>
                        <option value="canard">Canards</option>
                        <option value="oie">Oies</option>
                        <option value="dinde">Dindes</option>
                    </select>
                </div>
                <div>
                    <label for="production-filter" class="form-label">Mode Production</label>
                    <select id="production-filter" class="form-select">
                        <option value="">Tous</option>
                        <option value="ponte">Ponte</option>
                        <option value="viande">Viande</option>
                    </select>
                </div>
                <div>
                    <label for="search" class="form-label">Recherche</label>
                    <input type="text" id="search" class="form-input" placeholder="Num√©ro de lot, race...">
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des volailles -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Lots de Volailles</h3>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lot</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ferme</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Effectif</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">√Çge</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mortalit√©</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Production</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for volaille in volailles %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-full bg-yellow-100 flex items-center justify-center">
                                            {% if volaille.type == 'poule_pondeuse' %}ü•ö
                                            {% elseif volaille.type == 'poulet_chair' %}üçó
                                            {% elseif volaille.type == 'canard' %}ü¶Ü
                                            {% elseif volaille.type == 'dinde' %}ü¶É
                                            {% else %}üêì
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            Lot {{ volaille.numeroLot }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ volaille.race }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                    {% if volaille.type == 'poule_pondeuse' %}bg-orange-100 text-orange-800
                                    {% elseif volaille.type == 'poulet_chair' %}bg-red-100 text-red-800
                                    {% else %}bg-yellow-100 text-yellow-800
                                    {% endif %}">
                                    {{ volaille.type|replace('_', ' ')|title }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ volaille.ferme.nom }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">
                                    {{ volaille.nombreTete|number_format(0, ',', ' ') }}
                                </div>
                                {% set effectifActuel = (volaille.nombreTete * (1 - volaille.tauxMortalite / 100))|round %}
                                <div class="text-xs text-gray-500">
                                    ~{{ effectifActuel }} vivants
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ volaille.ageEnSemaines }} semaines
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ volaille.tauxMortalite|number_format(1) }}%</div>
                                {% if volaille.tauxMortalite > 5 %}
                                    <div class="text-xs text-red-500">√âlev√©</div>
                                {% elseif volaille.tauxMortalite > 2 %}
                                    <div class="text-xs text-yellow-500">Normal</div>
                                {% else %}
                                    <div class="text-xs text-green-500">Faible</div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                    {% if volaille.modeProduction == 'ponte' %}bg-green-100 text-green-800
                                    {% else %}bg-blue-100 text-blue-800
                                    {% endif %}">
                                    {{ volaille.modeProduction|title }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                    {% if volaille.statut == 'actif' %}bg-green-100 text-green-800
                                    {% elseif volaille.statut == 'vendu' %}bg-blue-100 text-blue-800
                                    {% else %}bg-gray-100 text-gray-800
                                    {% endif %}">
                                    {{ volaille.statut|title }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end space-x-2">
                                    {% if volaille.modeProduction == 'ponte' %}
                                        <a href="{{ path('volaille_production', { id: volaille.id }) }}" 
                                           class="text-green-600 hover:text-green-900" title="Production ≈ìufs">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                            </svg>
                                        </a>
                                    {% endif %}
                                    <button class="text-indigo-600 hover:text-indigo-900" title="Voir d√©tails">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                    <button class="text-yellow-600 hover:text-yellow-900" title="Modifier">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </button>
                                    <button class="text-red-600 hover:text-red-900" title="Supprimer">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center text-gray-500">
                                <div class="text-center">
                                    <span class="text-6xl mb-4 block">üêì</span>
                                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun lot de volailles</h3>
                                    <p class="text-gray-500">Commencez par ajouter votre premier lot de volailles.</p>
                                    <button class="btn btn-primary mt-4">Ajouter un lot</button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}