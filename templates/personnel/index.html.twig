{% extends 'base.html.twig' %}

{% block title %}Gestion du Personnel - {{ parent() }}{% endblock %}

{% block page_title %}Gestion du Personnel{% endblock %}
{% block page_subtitle %}Suivi des employ√©s et ressources humaines{% endblock %}

{% block header_actions %}
    <div class="flex space-x-3">
        <button class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Nouvel Employ√©
        </button>
        <button class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Rapport RH
        </button>
        <button class="btn btn-outline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
            Fiche de Paie
        </button>
    </div>
{% endblock %}

{% block body %}
    <!-- Statistiques RH -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üë•</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Total Employ√©s</p>
                    <p class="text-2xl font-semibold text-gray-900">{{ totalEmployes }}</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üí∞</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Masse Salariale</p>
                    <p class="text-2xl font-semibold text-green-600">{{ masseSalariale|number_format(0, ',', ' ') }}‚Ç¨</p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üìä</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Salaire Moyen</p>
                    <p class="text-2xl font-semibold text-purple-600">
                        {{ totalEmployes > 0 ? (masseSalariale / totalEmployes)|number_format(0, ',', ' ') : 0 }}‚Ç¨
                    </p>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                        <span class="text-xl">üè¢</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Fermes Couvertes</p>
                    <p class="text-2xl font-semibold text-yellow-600">{{ fermes|length }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- R√©partition par poste -->
    {% if repartitionPostes|length > 0 %}
        <div class="card mb-6">
            <div class="card-header">
                <h3 class="card-title">R√©partition par Poste</h3>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for poste, nombre in repartitionPostes %}
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
                                <span class="text-sm font-medium text-gray-700">{{ poste|title }}</span>
                            </div>
                            <span class="text-lg font-semibold text-gray-900">{{ nombre }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Filtres -->
    <div class="card mb-6">
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label for="ferme-filter" class="form-label">Ferme</label>
                    <select id="ferme-filter" class="form-select">
                        <option value="">Toutes les fermes</option>
                        {% for ferme in fermes %}
                            <option value="{{ ferme.id }}">{{ ferme.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="poste-filter" class="form-label">Poste</label>
                    <select id="poste-filter" class="form-select">
                        <option value="">Tous les postes</option>
                        {% for poste in repartitionPostes|keys %}
                            <option value="{{ poste }}">{{ poste|title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="anciennete-filter" class="form-label">Anciennet√©</label>
                    <select id="anciennete-filter" class="form-select">
                        <option value="">Toutes</option>
                        <option value="moins-1an">Moins d'1 an</option>
                        <option value="1-3ans">1 √† 3 ans</option>
                        <option value="plus-3ans">Plus de 3 ans</option>
                    </select>
                </div>
                <div>
                    <label for="search" class="form-label">Recherche</label>
                    <input type="text" id="search" class="form-input" placeholder="Nom, pr√©nom, email...">
                </div>
            </div>
        </div>
    </div>

    <!-- Liste du personnel -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Personnel</h3>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employ√©</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Poste</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ferme</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Embauche</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Anciennet√©</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Salaire</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for employe in employes %}
                        {% set anciennete = employe.dateEmbauche.diff(date()) %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                            <span class="text-sm font-medium text-gray-700">
                                                {{ employe.prenom|first }}{{ employe.nom|first }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ employe.prenom }} {{ employe.nom }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            ID: EMP{{ employe.id|str_pad(3, '0') }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                    {{ employe.poste|title }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ employe.ferme.nom }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ employe.telephone }}</div>
                                <div class="text-sm text-gray-500">{{ employe.email }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ employe.dateEmbauche|date('d/m/Y') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {% if anciennete.y > 0 %}
                                    {{ anciennete.y }} an{{ anciennete.y > 1 ? 's' : '' }}
                                    {% if anciennete.m > 0 %}
                                        {{ anciennete.m }} mois
                                    {% endif %}
                                {% elseif anciennete.m > 0 %}
                                    {{ anciennete.m }} mois
                                {% else %}
                                    R√©cent
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {{ employe.salaire|number_format(0, ',', ' ') }}‚Ç¨
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end space-x-2">
                                    <a href="{{ path('personnel_details', { id: employe.id }) }}" 
                                       class="text-indigo-600 hover:text-indigo-900" title="Voir d√©tails">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </a>
                                    <button class="text-green-600 hover:text-green-900" title="Modifier">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </button>
                                    <button class="text-blue-600 hover:text-blue-900" title="G√©n√©rer fiche de paie">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                                        </svg>
                                    </button>
                                    <button class="text-red-600 hover:text-red-900" title="Supprimer">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                                <div class="text-center">
                                    <span class="text-6xl mb-4 block">üë•</span>
                                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun employ√© enregistr√©</h3>
                                    <p class="text-gray-500">Commencez par ajouter votre premier employ√©.</p>
                                    <button class="btn btn-primary mt-4">Ajouter un employ√©</button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}